{
  "steps": {
    "1": {
      "blurb": "1. Connect the device to the NMEA network and power before continuing.",
      "variables": {
        "product": null,
        "serial": null,
        "updated": false
      },
      "buttons": [ "Next", "Cancel" ],
      "scripts": {
        "1": {
          "action": "start"
        }
      }
    },
    "2": {
      "blurb": "2. Waiting for P7 to load.",
      "buttons": [ "Next", "Fail" ],
      "scripts": {
        "1": {
          "action": "scan-device"
        },
        "2": {
          "action": "wait-device",
          "product-code": 9075,
          "timeout": 3000
        }
      }
    },
    "3": {
      "blurb": "3. Scan S/N label and type in the box below.",
      "inputs" : [{
        "type": "TextInput",
        "id": "serial",
        "label": "Serial number",
        "placeholder": "Enter serial number...",
        "error": {
          "title": "Error",
          "subtitle": "Serial number should be at least 6 characters long integer.",
          "active": false
        }
        }],
      "image": "/images/ean.gif",
      "buttons": [ "Next", "Cancel" ],
      "scripts": {
        "1": {
          "action": "start-form"
        }
      }
    },
    "4": {
      "blurb": "4. Touch screen test. Press all of the crosses on the screen.",
      "buttons": [ "Next", "Fail" ],
      "scripts": {
        "1": {
          "action": "start-tests"
        },
        "2": {
          "action": "start-test",
          "testCode": 1
        },
        "3": {
          "action": "wait-test"
        }
      }
    },
    "5": {
      "blurb": "5. Brightness test. Check full range of brightness.",
      "buttons": [ "Next", "Fail" ],
      "scripts": {
        "1": {
          "action": "start-test",
          "testCode": 2
        },
        "2": {
          "action": "wait-test"
        }
      }
    },
    "6": {
      "blurb": "6. GPS test. Attach GPS antenna.",
      "buttons": [ "Next", "Fail" ],
      "scripts": {
        "1": {
          "action": "start-test",
          "testCode": 3
        },
        "2": {
          "action": "wait-test",
          "timeout": 180000
        }
      }
    },
    "7": {
      "blurb": "7. Insert update USB.",
      "buttons": [ "Next", "Fail" ],
      "scripts": {
        "1": {
          "action": "stop-tests"
        },
        "2": {
          "action": "start-update"
        },
        "3": {
          "action": "wait-update",
          "onSuccess": { "action": "set-var", "variable": "updated", "value": true }
        }
      }
    },
    "8": {
      "blurb": "TESTING DONE",
      "last": true,
      "buttons": [ "Ok" ],
      "scripts": {
        "1": {
          "action": "log-result"
        }
      }
    }
  }
}
