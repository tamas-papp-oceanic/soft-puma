{
  "name": "puma",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "build": {
    "icon": "public/favicon.png",
    "productName": "Puma",
    "files": [
      "public/**/*",
      "src/config/*",
      "src/services/*",
      "main.js",
      "preload.js"
    ],
    "linux": {
      "target": "appImage",
      "publish": {
        "provider": "generic",
        "url": "http://localhost:8080/release/x86_64"
      }
    },
    "mac": {},
    "win": {
      "target": "nsis",
      "publish": {
        "provider": "generic",
        "url": "http://192.168.16.52:8080/release/win64"
      }
    },
    "appImage": {
      "synopsis": "Puma Diagnostic Tool",
      "description": "Oceanic System's Device Settings & Diagnostic Application",
      "artifactName": "puma"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Puma Diagnostic Tool"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:5000 && electron .",
    "electron-dev": "concurrently \"yarn run dev\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.2",
    "electron": "^19.0.0",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7",
    "node-sass": "^6.0.0",
    "postcss": "^8.2.15",
    "rebuild": "^0.1.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.7.3",
    "svelte-spa-router": "^3.1.0",
    "wait-on": "^5.3.0"
  },
  "dependencies": {
    "@edium/fsm": "^2.1.3",
    "bwip-js": "^3.1.0",
    "carbon-components-svelte": "^0.67.0",
    "carbon-icons-svelte": "^10.45.1",
    "crypto": "^1.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-serve": "^1.1.0",
    "electron-updater": "^5.2.1",
    "jwt-decode": "^3.1.2",
    "node-fetch": "^2.6.7",
    "pdfkit": "^0.13.0",
    "yarn": "^1.22.19"
  },
  "optionalDependencies": {
    "@csllc/cs-pcan-usb": "^0.2.1",
    "serialport": "^10.4.0",
    "socketcan": "^3.0.0"
  },
  "postinstall": "electron-builder install-app-deps"
}
